<h1><%= t('login.title') %></h1>

<p>
  <%= t('login.description') %>
</p>

<%= form_tag login_path do %>
  <p class="fom-field">
    <%= label_tag :email, t('labels.login.email') %>
    <%= text_field_tag :email %>
  </p class="fom-field">

  <p class="fom-field">
    <%= label_tag :password, t('labels.login.password') %>
    <%= password_field_tag :password %>
  </p class="fom-field">

  <p class="fom-field" class="submit">
    <%= submit_tag t('helpers.submit.login'), class: 'button' %>
  </p class="fom-field">
<% end %>

